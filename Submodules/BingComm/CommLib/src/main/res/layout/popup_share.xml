<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/popup_color_shadow"
    android:gravity="bottom"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="167dp"
        android:background="@color/main_color_white"
        android:orientation="horizontal"
        android:paddingBottom="41dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:paddingTop="38dp"

    >

        <TextView
            android:id="@+id/tv_share_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wx"
            android:gravity="center"
            android:text="微信"
            android:textSize="@dimen/main_item_textSize"/>

        <TextView
            android:id="@+id/tv_share_fr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_fr"
            android:gravity="center"
            android:text="微信"
            android:textSize="@dimen/main_item_textSize"/>
        <TextView
            android:id="@+id/tv_share_sina"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_sina"
            android:gravity="center"
            android:text="微信"
            android:textSize="@dimen/main_item_textSize"/>


    </LinearLayout>
</RelativeLayout>
