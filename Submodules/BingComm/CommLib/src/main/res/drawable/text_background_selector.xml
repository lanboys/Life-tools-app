<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_selected="true"
        android:state_pressed="true"
    >
        <shape>
            <solid android:color="@color/btn_color_yellow_select"/>

            <corners android:radius="5dp"/>

            <padding android:bottom="5dp" android:left="15dp" android:right="15dp"
                     android:top="5dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_color_yellow_normal"/>

            <padding android:bottom="5dp" android:left="15dp" android:right="15dp"
                     android:top="5dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>


</selector>