<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG_GRAY"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mjn.invest.ui.investDetail.InvestDetailActivity"
    tools:showIn="@layout/activity_invest_detail">


    <com.mjn.libs.utils.DragLayout
        android:id="@+id/draglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/first"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>

        <FrameLayout
            android:id="@+id/second"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
    </com.mjn.libs.utils.DragLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_invsetmoney"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#a55db9"
            android:gravity="center"
            android:text="0元"
            android:textColor="@color/white"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/invest_detail_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BLUE_THEME"
            android:gravity="center"
            android:text="立即购买"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="16sp"/>


    </LinearLayout>


</LinearLayout>