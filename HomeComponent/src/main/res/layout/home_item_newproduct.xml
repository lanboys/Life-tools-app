            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_product_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="0个月"
                    android:textColor="@color/CHAR_BLACK_COLOR"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:text="投资期限"
                    android:textColor="@color/CHAR_GRAY_LESS_COLOR"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_product_leftMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:gravity="center"
                    android:text="0元"
                    android:textColor="@color/CHAR_BLACK_COLOR"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/home_product_lowmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="100元"
                    android:textColor="@color/CHAR_GRAY_COLOR"
                    android:textSize="15sp"
                    android:visibility="gone" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:text="起投金额"
                    android:textColor="@color/CHAR_GRAY_LESS_COLOR"
                    android:textSize="13sp" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>